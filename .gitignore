### RAILS + RUBY ###

# Ignore bundler config.
/.bundle

# Ignore the default SQLite database.
/inventory-backend/db/*.sqlite3
/inventory-backend/db/*.sqlite3-journal
/inventory-backend/db/*.sqlite3-*

# Ignore all logfiles and tempfiles.
/inventory-backend/log/*
/inventory-backend/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
/inventory-backend/tmp/pids/*
!/inventory-backend/tmp/pids/
!/inventory-backend/tmp/pids/.keep

# Ignore uploaded files in development.
/inventory-backend/storage/*
!/inventory-backend/storage/.keep

/inventory-backend/public/assets
/inventory-backend/.byebug_history

# Ignore master key for decrypting credentials and more.
/inventory-backend/config/master.key

# Ignore env file
/inventory-backend/.env
